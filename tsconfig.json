{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
"strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ---- Recommandés pour Next.js ----
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // ---- Tes paramètres ----
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    // ---- Recommandé pour éviter les conflits de types ----
    "skipLibCheck": true
  }
}
